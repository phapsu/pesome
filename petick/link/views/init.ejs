    if(this.link.is_link_video == true){ 
        var url = this.link.link;
       
        var isYouTube = RegExp(/\.youtube\.com.+v=([\w_\-]+)/i);
        var r = isYouTube.exec(url);
        if (r && r[1]) {
            this.embed_code = r[1];           
