<div class="main-pin-wrappper">
    <div class="content-box">
        <table width='100%' cellspacing="5">
            <tr>
                <td class='center'>
                    <img src="<%= $full_base_url+this.petopic.thumbnail %>" alt=""/>
                    <h3><%= this.petopic.title %></h3>
                </td>
            </tr>
            <tr>
                <td>
                    <p><%= this.petopic.description %></p>
                </td>
            </tr>
            <tr>
                <td class='center'>
                    <% if(this.is_follow=='pesome_1'){ %>
                    <a href=""  disabled class="btn" id="FollowButton" petopic_id="<%= this.petopic.id %>" ><i class="icon-fire"></i> Follow</a>
                    <%}else{%> 
                    <a href="" class="btn" id="FollowButton" petopic_id="<%= this.petopic.id %>" ><i class="icon-fire"></i> Follow</a>
                    <%}%> 
                    
                    <% if(this.is_membership=='pesome_1'){ %>
                    <a href="" disabled class="btn" id="AddmeinButton" petopic_id="<%= this.petopic.id %>" ><i class="icon-plus"></i> Add me in</a>
                    <%}else{%> 
                    <a href="" class="btn" id="AddmeinButton" petopic_id="<%= this.petopic.id %>" ><i class="icon-plus"></i> Add me in</a>
                    <%}%>     
                </td>
            </tr>
        </table>
    </div>
    <div>
        <div class="pin-wrapper-bottom-start"></div>
        <div class="pin-wrapper-bottom-body"></div>
        <div class="pin-wrapper-bottom-end"></div>
    </div>
</div>